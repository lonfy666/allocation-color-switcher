   <string notr="true">/* Общий фон и цвет текста */
QWidget {
    background-color: #2b2b2b;
    color: #f0f0f0;
    font-family: Arial;
    font-size: 11pt;
}

/* Кнопки */
QPushButton {
    background-color: #3c3c3c;
    border: 1px solid #5c5c5c;
    padding: 5px;
    border-radius: 4px;
}
QPushButton:hover {
    background-color: #505050;
}
QPushButton:pressed {
    background-color: #2a82da;
    color: white;
}

/* Поля ввода */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #3c3c3c;
    color: #ffffff;
    border: 1px solid #5c5c5c;
    border-radius: 4px;
}

/* Комбо-боксы */
QComboBox {
    background-color: #3c3c3c;
    color: #ffffff;
    border: 1px solid #5c5c5c;
    border-radius: 4px;
}
QComboBox QAbstractItemView {
    background-color: #3c3c3c;
    selection-background-color: #2a82da;
    selection-color: white;
}

/* Чекбоксы и радио-кнопки */
QCheckBox, QRadioButton {
    color: #f0f0f0;
}

/* Таблицы и списки */
QTableView, QListView, QTreeView {
    background-color: #3c3c3c;
    alternate-background-color: #2f2f2f;
    color: #f0f0f0;
    gridline-color: #5c5c5c;
}

/* Заголовки таблиц */
QHeaderView::section {
    background-color: #4b4b4b;
    color: #f0f0f0;
    padding: 4px;
    border: 1px solid #5c5c5c;
}

/* Scrollbar */
QScrollBar:vertical, QScrollBar:horizontal {
    background: #2b2b2b;
    border: none;
    width: 12px;
    margin: 0px;
}
QScrollBar::handle:vertical, QScrollBar::handle:horizontal {
    background: #5c5c5c;
    border-radius: 6px;
}
QScrollBar::add-line, QScrollBar::sub-line {
    background: none;
    border: none;
}
</string>
